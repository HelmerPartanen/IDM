{
  "name": "download-manager",
  "version": "1.0.0",
  "description": "Multi-threaded download manager with Chrome extension integration",
  "main": "out/main/index.js",
  "author": "Download Manager",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder --win",
    "build:extension": "cd extension && npm run build",
    "build:native-host": "cd native-host && npx esbuild host.ts --bundle --platform=node --target=node18 --outfile=dist/host.js",
    "build:native-host-exe": "cd native-host && npx pkg dist/host.js --targets node18-win-x64 --output idm-native-host.exe",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@headlessui/react": "^2.1.0",
    "@heroicons/react": "^2.1.0",
    "@tanstack/react-virtual": "^3.5.0",
    "better-sqlite3": "^11.0.0",
    "content-disposition": "^0.5.4",
    "electron-log": "^5.4.3",
    "electron-store": "^8.2.0",
    "got": "^14.4.0",
    "lucide-react": "^0.575.0",
    "p-queue": "^8.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "speedometer": "^1.1.0",
    "uuid": "^9.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/content-disposition": "^0.5.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.0",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0"
  },
  "build": {
    "appId": "com.idm.clone",
    "productName": "Download Manager",
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/favicon.ico"
    },
    "extraResources": [
      {
        "from": "native-host/",
        "to": "native-host",
        "filter": [
          "idm-native-host.exe",
          "com.idm.clone.json"
        ]
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "include": "resources/installer.nsh",
      "installerHeader": "resources/installerHeader.png",
      "installerSidebar": "resources/installerSidebar.png"
    }
  }
}