    "lucide-react": "^0.575.0",
    "p-queue": "^8.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "speedometer": "^1.1.0",
    "uuid": "^9.0.0",
    "zustand": "^4.5.0"
